{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Run Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "agents/tests/",
                "-v",
                "--cov=agents.governance",
                "--cov=agents.core_logic",
                "--cov-report=xml",
                "--cov-report=term-missing",
                "--cov-fail-under=45"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Agent Demo",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/agents/agent.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Docker: Trainer Debug",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "platform": "node",
            "node": {
                "package": "${workspaceFolder}/trainer/package.json",
                "localRoot": "${workspaceFolder}/trainer"
            }
        }
    ]
}
